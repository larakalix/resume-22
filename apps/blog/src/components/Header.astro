---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header class="w-full sticky top-0 px-8 py-8 z-10">
  <h2>
    {SITE_TITLE}
  </h2>
  <nav class="nav">
    <a
      href="https://www.kalixthedev.com"
      class="font-bold text-[2rem] bg-v-black text-white px-2 rounded dark:bg-white dark:text-v-black relative cursor-default z-20"
      >KTD</a
    >

    <ul class="nav__links">
      <li class="font-montserrat font-bold">
        <HeaderLink
          href="/"
          class={"text-[1rem] md:text-[0.875rem] font-normal px-4 py-2 rounded-v-rounded"}
        >
          Home
        </HeaderLink>
        <HeaderLink
          href="/blog"
          class={"text-[1rem] md:text-[0.875rem] font-normal px-4 py-2 rounded-v-rounded"}
        >
          Blog
        </HeaderLink>
      </li>
    </ul>

    <!-- <HeaderLink href="/blog">Blog</HeaderLink>
    <HeaderLink href="/about">About</HeaderLink>
    <HeaderLink href="https://twitter.com/astrodotbuild" target="_blank">
      Twitter
    </HeaderLink>
    <HeaderLink href="https://github.com/withastro/astro" target="_blank">
      GitHub
    </HeaderLink> -->
  </nav>
</header>

<style>
  .nav {
    --state-close: none;
    --state-burger: block;
    --state-menu: translate(-100%);

    color: black;
    display: grid;
    justify-content: space-between;
    align-items: center;
    grid-template-columns: repeat(2, max-content);
  }

  .nav:target {
    --state-menu: translate(0);
    --state-close: block;
    --state-burger: none;
  }

  .nav__burger,
  .nav__close {
    color: white;
    cursor: pointer;
    grid-column: -2/-1;
    grid-row: 1/2;
    transition: 0.4s transform;
    z-index: 20;
  }

  .nav__icon {
    font-size: 40px;
    margin-left: 0.6rem;
  }

  .nav__links {
    position: fixed;
    z-index: 10;
    background-color: black;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    display: flex;
    align-content: center;
    justify-content: center;
    flex-direction: column;
    z-index: 10;
    gap: 1rem;
    padding-left: 5%;
    transform: var(--state-menu);
    transition: 0.3s transform;
    align-items: center;
  }

  .nav__item {
    color: white;
    list-style: none;
  }

  .nav__link {
    color: white;
  }

  .nav__burger {
    display: var(--state-burger);
  }

  .nav__close {
    display: var(--state-close);
  }

  @media (min-width: 768px) {
    .nav {
      --state-burger: none;
      --state-menu: none;
    }

    .nav:target {
      --state-close: none;
    }

    .nav__links {
      display: grid;
      position: unset;
      background-color: unset;
      padding: 0;
      height: unset;
      gap: 1rem;
      transform: unset;
      grid-column: -2/-1;
      grid-row: 1/2;
      grid-auto-flow: column;
    }
  }
</style>
